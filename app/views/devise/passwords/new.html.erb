    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#"><%= image_tag("logo-lg.png", :alt => "attendance tracker") %></a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- page content -->
    <div class="container">
      <div class="row signin-box cont-row registration-form ">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-xs-12 regHeader">Forgot your password?</div>
        <div class="col-xs-12">
          <div class="form-group">
            <%= f.label :email, :class => "regLabel" %>
            <div><%= f.email_field :email, :class => "form-control", autofocus: true %></div>
          </div>
        </div>
        
        <div class="col-xs-12">
          <div><%= f.submit "Send me reset password instructions", :class => "btn btn-blue signin-btn" %></div>
          <span class="clearfix"></span>
        </div>
        <% end %>
        <!-- <%= render "devise/shared/links" %> -->
      </div>
    </div>


