<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.time_select :start, :ampm => 'true' %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.time_select :end, :ampm => 'true' %>
  </div>
  <div class="field">
    <%= f.label :beacon %><br>
    <%= f.text_field :beacon %>
  </div>
  <div class="field">
    <%= f.label :admins %><br>
    <%= collection_check_boxes(:event, :admin_user_ids, User.all, :id, :email) %>
  </div>
  <div class="field">
    <%= f.label :clients %><br>
    <%= collection_check_boxes(:event, :client_user_ids, User.all, :id, :email) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
