<div id="wrapper">
  <nav class="navbar navbar-default navbar-fixed-top navbar-global" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><%= image_tag("logo-lg.png", :alt => "attendance tracker") %></a>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav side-nav">
        <% if false %>
        <li class="list-label">My Events:</li>
        <% @admin_events.each do |event| %>
        <li class="active"><%= link_to event.name, event %></li>
        <% end %>
        
        <li class="list-label-b">Event's I am Attending:</li>
        <% @client_events.each do |event| %>
        <li class="active"><%= link_to event.name, event %></li>
        <% end %>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right navbar-user">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle user-dropdown" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>
      <div id="page-wrapper">
        <div class="row">
        <div class="col-sm-12 main">
        <div class="row cont-row-b">
          <h3 class="sub-header">Listing Events</h3>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Start</th>
                  <th>End</th>
                  <th>Beacon</th>
                </tr>
              </thead>
              <tbody>
                <% @events.each do |event| %>
                  <tr>
                    <td><%= event.name %></td>
                    <td><%= event.start %></td>
                    <td><%= event.end %></td>
                    <td><%= event.beacon %></td>
                    <td><span class="pull-right"><%= link_to 'Show', event, :class => 'btn btn-primary' %>
                    <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-info' %>
                    <%= link_to 'Delete', event, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= link_to 'New Event', new_event_path, :class => 'btn btn-blue signin-btn' %>
        </div>
      </div>
    </div><!-- /.row -->
  </div><!-- /#page-wrapper -->
</div><!-- /#wrapper -->